<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="/images/inc.png"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <h1 style="text-align: center;">Signup</h1>
        {{#if status}}
              <p class="text-danger text-center">Passwords Does not Match</p>
            {{/if}}
        <form action="/signup" method="post">
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input required type="text" placeholder="Enter Username" name="name" id="form1Example13" class="form-control form-control-lg" />
            
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input required
            pattern=".{8,}" title="Eight or more characters"
             name="password" placeholder="Enter Password" type="password" id="form1Example23" class="form-control form-control-lg" />
            
          </div>
        <div class="form-outline mb-4">
          
            <input required name="cpassword" 
            pattern=".{8,}" title="Eight or more characters"
             placeholder="Confirm Password" type="password" id="form1Example23" class="form-control form-control-lg" />
  
          </div>
          

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign Up</button>
            
        </form>
      </div>
    </div>
  </div>
</section>